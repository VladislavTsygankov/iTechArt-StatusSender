{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "plugins": ["babel"],
  "extends": ["prettier", "eslint:recommended"],
  "rules": {
    "max-len": ["error", 100, 2],

    "quotes": [2, "single", { "allowTemplateLiterals": true }],

    "no-console": [0],

    "no-useless-escape": 0
  },
  "globals": {
    "__DEV__": false
  }
}
